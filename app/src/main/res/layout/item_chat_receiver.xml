<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/image_view"
        android:layout_width="@dimen/icon_size_x6"
        android:layout_height="@dimen/icon_size_x6"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        app:srcCompat="@drawable/ic_vector_chat" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/text_view"
            style="@style/AppTheme.TextView_Title.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@drawable/ic_circle_theme"
            android:minLines="1"
            android:paddingBottom="@dimen/margin"
            android:paddingLeft="@dimen/margin_x2"
            android:paddingRight="@dimen/margin_x2"
            android:paddingTop="@dimen/margin"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/text_time"
            style="@style/AppTheme.TextView_Sub_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginLeft="@dimen/margin_x2"
            android:layout_marginStart="@dimen/margin_x2"
            android:minLines="1"
            android:text="@string/app_name"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>